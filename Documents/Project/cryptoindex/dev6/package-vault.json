{
  "name": "hyperindex-vault-system",
  "version": "1.0.0",
  "description": "HyperIndex Smart Contract Vault System with Cross-Chain Integration",
  "main": "scripts/deploy-vault-system.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test --config hardhat-vault.config.js",
    "test:vault": "hardhat test test/HyperIndexVault.test.js",
    "test:record": "hardhat test test/HyperEvmRecordKeeper.test.js",
    "deploy:local": "hardhat run scripts/deploy-vault-system.js --network localhost",
    "deploy:testnet": "hardhat run scripts/deploy-vault-system.js --network arbitrumSepolia",
    "deploy:mainnet": "hardhat run scripts/deploy-vault-system.js --network arbitrum",
    "deploy:hyperEvm": "hardhat run scripts/deploy-vault-system.js --network hyperEvm",
    "verify": "hardhat verify",
    "flatten": "hardhat flatten",
    "size": "hardhat size-contracts",
    "gas-report": "REPORT_GAS=true hardhat test",
    "coverage": "hardhat coverage",
    "lint": "solhint 'contracts/vault/**/*.sol' 'contracts/crosschain/**/*.sol'",
    "lint:fix": "solhint 'contracts/vault/**/*.sol' 'contracts/crosschain/**/*.sol' --fix",
    "upgrade:vault": "hardhat run scripts/upgrade-vault.js",
    "setup:roles": "hardhat run scripts/setup-roles.js",
    "monitor:vault": "hardhat run scripts/monitor-vault.js"
  },
  "keywords": [
    "defi",
    "vault",
    "cross-chain",
    "layerzero",
    "erc4626",
    "index-fund",
    "rebalancing",
    "upgradeable"
  ],
  "author": "HyperIndex Team",
  "license": "MIT",
  "dependencies": {
    "@layerzerolabs/lz-evm-oapp-v2": "^2.3.3",
    "@layerzerolabs/lz-evm-sdk-v2": "^2.3.3",
    "@openzeppelin/contracts": "^4.9.0",
    "@openzeppelin/contracts-upgradeable": "^4.9.0",
    "@openzeppelin/hardhat-upgrades": "^1.28.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.6",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@nomicfoundation/hardhat-toolbox": "^2.0.2",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@typechain/ethers-v5": "^10.2.1",
    "@typechain/hardhat": "^6.1.6",
    "chai": "^4.3.7",
    "ethers": "^5.7.2",
    "hardhat": "^2.14.0",
    "hardhat-contract-sizer": "^2.8.0",
    "hardhat-gas-reporter": "^1.0.9",
    "solhint": "^3.4.1",
    "solidity-coverage": "^0.8.2",
    "typechain": "^8.1.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hyperindex/vault-system.git"
  },
  "bugs": {
    "url": "https://github.com/hyperindex/vault-system/issues"
  },
  "homepage": "https://hyperindex.io"
}