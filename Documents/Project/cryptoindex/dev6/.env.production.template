# Production Environment Template
# Copy this file to .env.local and fill in the actual values

# ================================
# CORE APPLICATION SETTINGS
# ================================

# Privy Configuration
NEXT_PUBLIC_PRIVY_APP_ID=your_production_privy_app_id
PRIVY_APP_SECRET=your_production_privy_app_secret  
PRIVY_VERIFICATION_KEY=your_production_verification_key

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_production_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_production_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_production_service_role_key

# Application
NEXT_PUBLIC_APP_URL=https://yourdomain.com
NODE_ENV=production

# ================================
# BLOCKCHAIN & RPC SETTINGS
# ================================

# HyperEVM Configuration
HYPERVM_TESTNET_RPC=https://rpc.hyperliquid-testnet.xyz/evm
HYPERVM_MAINNET_RPC=https://api.hyperliquid.xyz/evm
HYPERVM_TESTNET_CHAIN_ID=998
HYPERVM_MAINNET_CHAIN_ID=999

# External Chain RPC URLs
BSC_RPC_URL=https://bsc-dataseed1.binance.org/
ETHEREUM_RPC_URL=https://eth-mainnet.alchemyapi.io/v2/YOUR_ALCHEMY_KEY
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
ARBITRUM_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# API Keys for RPC Providers
INFURA_PROJECT_ID=your_infura_project_id
ALCHEMY_API_KEY=your_alchemy_api_key

# ================================
# DEX API KEYS
# ================================

# Jupiter (Solana DEX) - 무료 lite API 사용
JUPITER_API_URL=https://lite-api.jup.ag

# PancakeSwap (Optional - for premium features)
PANCAKESWAP_API_KEY=your_pancakeswap_api_key

# ================================
# WALLET & SECURITY SETTINGS
# ================================

# CRITICAL: Change this in production!
PRIVATE_KEY=GENERATE_NEW_SECURE_PRIVATE_KEY

# Multi-signature wallet addresses (Recommended)
TREASURY_MULTISIG_ADDRESS=your_treasury_multisig
OPERATIONS_WALLET_ADDRESS=your_operations_wallet
EMERGENCY_WALLET_ADDRESS=your_emergency_wallet

# JWT Secret for custom tokens
JWT_SECRET=GENERATE_NEW_RANDOM_JWT_SECRET

# ================================
# LAYERZERO CONFIGURATION
# ================================

# LayerZero Endpoint IDs
LAYERZERO_ETHEREUM_ENDPOINT_ID=101
LAYERZERO_BSC_ENDPOINT_ID=102
LAYERZERO_POLYGON_ENDPOINT_ID=109
LAYERZERO_ARBITRUM_ENDPOINT_ID=110
LAYERZERO_HYPERVM_ENDPOINT_ID=your_hypervm_endpoint_id

# LayerZero Contract Addresses (Deploy these first)
LAYERZERO_MESSENGER_ETHEREUM=your_deployed_contract_address
LAYERZERO_MESSENGER_BSC=your_deployed_contract_address
LAYERZERO_MESSENGER_POLYGON=your_deployed_contract_address
LAYERZERO_MESSENGER_ARBITRUM=your_deployed_contract_address

# ================================
# TRADING PARAMETERS
# ================================

# Investment Limits
MIN_INVESTMENT_USDC=10
MAX_INVESTMENT_USDC=100000
SLIPPAGE_TOLERANCE_DEFAULT=1.0

# Rebalancing Settings  
REBALANCE_THRESHOLD_PERCENT=5.0
AUTO_REBALANCE_INTERVAL_HOURS=168  # Weekly
EMERGENCY_REBALANCE_THRESHOLD=20.0

# Gas Settings
GAS_LIMIT_MULTIPLIER=1.2
MAX_GAS_PRICE_GWEI=100
PRIORITY_FEE_GWEI=2

# Transaction Settings
TRANSACTION_TIMEOUT_MS=300000  # 5 minutes
MAX_RETRY_ATTEMPTS=3
CONFIRMATION_BLOCKS=2

# ================================
# MONITORING & ALERTS
# ================================

# Admin Configuration
ADMIN_EMAILS=your_admin_email@domain.com
ADMIN_WALLET_ADDRESSES=your_admin_wallet_address

# Error Monitoring
SENTRY_DSN=your_production_sentry_dsn
ERROR_WEBHOOK_URL=your_discord_or_slack_webhook

# Performance Monitoring
LOGFLARE_API_KEY=your_logflare_key
DATADOG_API_KEY=your_datadog_key

# Health Check Settings
HEALTH_CHECK_INTERVAL_MS=60000  # 1 minute
SYSTEM_ALERT_THRESHOLD=5  # 5 consecutive failures

# ================================
# DATABASE & CACHING
# ================================

# Redis Configuration (for production caching)
REDIS_URL=your_production_redis_url
REDIS_PASSWORD=your_secure_redis_password
REDIS_HOST=your_redis_host
REDIS_PORT=6379
REDIS_DB=0
REDIS_TTL_SECONDS=300

# ================================
# SECURITY SETTINGS
# ================================

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# CORS Settings
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS

# ================================
# FEATURE FLAGS
# ================================

# Enable/Disable Features
ENABLE_AUTO_REBALANCING=true
ENABLE_CROSS_CHAIN_SWAPS=true  
ENABLE_EMERGENCY_PAUSE=true
ENABLE_DETAILED_LOGGING=false
ENABLE_PERFORMANCE_MONITORING=true

# ================================
# BACKUP & RECOVERY
# ================================

# Database Backup
DB_BACKUP_ENABLED=true
DB_BACKUP_INTERVAL_HOURS=24
DB_BACKUP_RETENTION_DAYS=30

# Emergency Recovery
EMERGENCY_PAUSE_ENABLED=true
CIRCUIT_BREAKER_THRESHOLD=10
EMERGENCY_CONTACT_EMAIL=emergency@yourdomain.com