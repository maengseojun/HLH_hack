{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@figma/*": [
        "figma/*"
      ]
    },
    "strict": false,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "noImplicitThis": true,
    "alwaysStrict": true
  },
  "include": [
    "figma/src/**/*.ts",
    "figma/src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "backend",
    ".next",
    "node_modules"
  ]
}
